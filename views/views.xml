<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="ecommerce_market.list">
      <field name="name">ecommerce_market list</field>
      <field name="model">ecommerce_market.ecommerce_market</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="ecommerce_market.action_window">
      <field name="name">ecommerce_market window</field>
      <field name="res_model">ecommerce_market.ecommerce_market</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="ecommerce_market.action_server">
      <field name="name">ecommerce_market server</field>
      <field name="model_id" ref="model_ecommerce_market_ecommerce_market"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="ecommerce_market" id="ecommerce_market.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="ecommerce_market.menu_1" parent="ecommerce_market.menu_root"/>
    <menuitem name="Menu 2" id="ecommerce_market.menu_2" parent="ecommerce_market.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="ecommerce_market.menu_1_list" parent="ecommerce_market.menu_1"
              action="ecommerce_market.action_window"/>
    <menuitem name="Server to list" id="ecommerce_market" parent="ecommerce_market.menu_2"
              action="ecommerce_market.action_server"/>

  </data>
</odoo>
